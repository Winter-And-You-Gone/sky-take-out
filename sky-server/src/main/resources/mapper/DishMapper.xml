<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into dish (name, category_id, price, image, description, status, create_time, update_time, create_user,
                          update_user)
        values (#{name}, #{categoryId}, #{price}, #{image}, #{description}, #{status}, #{createTime}, #{updateTime},
                #{createUser}, #{updateUser})
    </insert>
    <select id="pageQuery" resultType="com.sky.vo.DishVO">
        select d.*, c.name category_name from dish d left join category c on d.category_id = c.id
        <where>
            <if test="name != null and name != ''">
                d.name like concat('%',#{name},'%')
            </if>
            <if test="categoryId != null">
                and d.category_id = #{categoryId}
            </if>
            <if test="status != null">
                and d.status = #{status}
            </if>
        </where>
        order by d.create_time desc
    </select>

    <resultMap id="dishVOWithFlavorMap" type="com.sky.vo.DishVO">
        <id property="id" column="dish_id"/>
        <result property="name" column="dish_name"/>
        <result property="categoryId" column="category_id"/>
        <result property="price" column="price"/>
        <result property="image" column="image"/>
        <result property="description" column="description"/>
        <result property="status" column="status"/>
        <result property="updateTime" column="update_time"/>
        <result property="categoryName" column="category_name"/>
        <collection property="flavors" ofType="com.sky.entity.DishFlavor">
            <id property="id" column="flavor_id"/>
            <result property="dishId" column="dish_id"/>
            <result property="name" column="flavor_name"/>
            <result property="value" column="flavor_value"/>
        </collection>
    </resultMap>

    <select id="getByIdWithFlavor" resultMap="dishVOWithFlavorMap">
        select d.id     as dish_id,
               d.name   as dish_name,
               d.category_id,
               d.price,
               d.image,
               d.description,
               d.status,
               d.update_time,
               c.name   as category_name,
               df.id    as flavor_id,
               df.dish_id,
               df.name  as flavor_name,
               df.value as flavor_value
        from dish d
                 left join category c
                           on d.category_id = c.id
                 left join dish_flavor df
                           on d.id = df.dish_id
        where d.id = #{id}
    </select>

    <select id="list" resultType="com.sky.entity.Dish">
        select * from dish
        <where>
            <if test="categoryId != null and categoryId != ''">
                category_id = #{categoryId}
            </if>
        </where>
        order by update_time desc
    </select>
    <!--根据id查询菜品信息-->
    <select id="getById" resultType="com.sky.entity.Dish">
        select *
        from dish
        where id = #{id}
    </select>
    <update id="update">
        update dish
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="categoryId != null and categoryId != ''">
                category_id = #{categoryId},
            </if>
            <if test="price != null and price != ''">
                price = #{price},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="updateUser != null">
                update_user = #{updateUser},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteBatchById">
        delete from dish where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
    <!--根据条件统计菜品数量-->
    <select id="countByMap" resultType="java.lang.Integer">
        select count(id) from dish
        <where>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
        </where>
    </select>
</mapper>
